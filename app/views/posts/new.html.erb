<% if logged_in? %>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @post, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :title, '店名' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :category_id, 'カテゴリid' %>
        <!--<%= f.select :category_id, options: @category_options, class: 'form-control' %>-->
        <%= f.collection_select :category_id, Category.all, :id, :name,include_blank: "選択して下さい" %>
      </div>

      <div class="form-group">
        <%= f.label :description, '説明' %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>  

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the MensPlaceRecorder</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>